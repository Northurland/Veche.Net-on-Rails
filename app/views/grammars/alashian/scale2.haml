        - latin = %w(ləbbānet ləbbātha ləbbāčhe ləbbān ləbbānā ləbbānnā ləbbāthun ləbbāčhin ləbbānū ləbbānū)
        %td= render 'verb_table', :title => "Scale II Preterite Tense", :verb => { :ala => "ləbbān", :eng => "be whitened" }, :alashian => alashian, :latin => latin
    %table.invisible
      %tr
        - alashian = %w(λέββε λέββετ λέββετζ λέββεν λεββενώ λέββεν λέββαττυν λέββατζζιν λεββενού λεββενού)
        - latin = %w(lebbe lebbet lebbeč lebben lebbenā lebben lebbəthun lebbəčhin lebbenū lebbenū)
        %td= render 'verb_table', :title => "Scale II Imperfect Tense", :verb => { :ala => "ləbbēn", :eng => "whiten" }, :alashian => alashian, :latin => latin
        - alashian = %w(λύββα λύββατ λύββατζ λύββαν λυββανώ λύββαν λύββαττυν λύββατζζιν λυββανού λυββανού)
