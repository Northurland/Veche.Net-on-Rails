                 :imperfect   => %w(νιστυβυώρ νιστυβυώρατ νιστυβυώρας̄ νιστυβυώρ νιστυβυωρώ νιστυβυώραν νιστυβυώρτυν νιστυβυώρσ̄ιν νιστυβυωρού),
                 :subjunctive => %w(в̄ωστυβώρ в̄ατωστυβώρ в̄ατωστυβώρ в̄ιωστυβώρ в̄ιωστυβώρ в̄ανωστυβώρ в̄ατωστυβώρ в̄ατωστυβώρ в̄ιωστυβώρ),
                 :imperative  => nil,
                 :infinitive  => "μωστυβώρ",
                 :participle  => "μουσταβούρ" }
  - latin = { :present     => %w('āstubār tāstubār tāstubārī yāstubār yāstubārī nāstubārū tāstubārū tāstubārū yāstubārū),
              :preterite   => %w(nistubāret nistubārta nistubārše nistubār nistubārā nistubārnā nistubārtun nistubāršin nistubārū),
              :imperfect   => %w(nistubuor nistubuorat nistubuoraš nistubuor nistubuorā nistubuoran nistubuortun nistubuoršin nistubuorū),
              :subjunctive => %w(vāstubār vatāstubār vatāstubār vyāstubār vyāstubār vanāstubār vatāstubār vatāstubār vyāstubār),
              :imperative  => nil,
              :infinitive  => "māstubār",
              :participle  => "mūstabūr" }
  = render 'full_conjugation_table', :title => "Scale VI Conjugation", :verb => { :ala => "nistubār", :eng => "cross, intersect" }, :alashian => alashian, :latin => latin

