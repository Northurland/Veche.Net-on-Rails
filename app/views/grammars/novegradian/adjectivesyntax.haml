          = t("вопредѣ", "voprédě", :linebreak => true)
          %br
          “ahead”
        %td
          = t("позадѣ", "pozádě", :linebreak => true)
          %br
          “behind”
        %td
          = t("налѣвѣ", "nalě́vě", :linebreak => true)
          %br
          “on the left”
        %td
          = t("направѣ", "naprávě", :linebreak => true)
          %br
          “on the right”
      %tr
        %th To
        %td
          = t("копредем", "koprédem", :linebreak => true)
          %br
          “foward”
        %td
          = t("козадем", "kozádem", :linebreak => true)
          %br
          “backward”
        %td
          = t("колѣвом", "kolě́vom", :linebreak => true)
          %br
          “leftward”
        %td
          = t("коправом", "koprávom", :linebreak => true)
          %br
          “rightward”
      %tr
        %th From
        %td
          = t("сопреда", "sopréda", :linebreak => true)
          %br
          “from in front”
        %td
          = t("созада", "sozáda", :linebreak => true)
          %br
          “from behind”
        %td
          = t("солѣва", "solě́va", :linebreak => true)
          %br
