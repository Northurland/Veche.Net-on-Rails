                    "butcher" ],
                  [ { :cyr => "политика", :lat => "polítika" },
                    "politics",
                    :arrow,
                    { :cyr => "политинике/а", :lat => "politínike(a)" },
                    "politician" ],
                  [ { :cyr => "море", :lat => "móre" },
                    "sea",
                    :arrow,
                    { :cyr => "мораке/а", :lat => "moráke(a)" },
                    "sailor" ],
