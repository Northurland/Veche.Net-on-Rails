                  [ { :cyr => "пити", :lat => "píti" },
                    "drink",
                    :arrow,
                    { :cyr => "пиване", :lat => "piváne" },
                    "drinking glass" ],
                  [ { :cyr => "юва", :lat => "iúva" },
                    "[drinking] water",
                    :arrow,
                    { :cyr => "юване", :lat => "iuváne" },
