                  "command",
                  :arrow,
                  { :cyr => "командовати", :lat => "komandováti" },
                  "to command" ],
                [ { :cyr => "заутроке", :lat => "záutroke" },
                  "breakfast",
                  :arrow,
                  { :cyr => "заутрогати", :lat => "zautrogáti" },
                  "to eat breakfast" ],
                [ { :cyr => "цервене", :lat => "cérvene" },
