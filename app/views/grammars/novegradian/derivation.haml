                    :arrow,
                    { :cyr => "рѣѕенье", :lat => "rědzénje" },
                    "[faculty of] speech" ],
                  [ { :cyr => "видѣти", :lat => "víděti" },
                    "see",
                    :arrow,
                    { :cyr => "виденье", :lat => "vidénje" },
                    "[sense of] vision" ],
                  [ { :cyr => "вѣcти", :lat => "vě́sti" },
                    "know",
                    :arrow,
                    { :cyr => "вѣденье", :lat => "vědénje" },
                    "knowledge" ],
                  [ { :cyr => "бѣгати", :lat => "bě́gati" },
                    "run",
                    :arrow,
