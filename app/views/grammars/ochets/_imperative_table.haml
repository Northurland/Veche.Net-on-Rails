- forms ||= {}
- title ||= ""

%table.noundecl
  %tr
    %th{:colspan => 3}= title
  %tr
    %th
    %th Singular
    %th Plural
  %tr
    %th 2nd
    %td
      = t(forms[:sg2][:cyr], forms[:sg2][:lat], :linebreak => true)
      - if forms[:sg2][:und]
        %br
        = underlying(forms[:sg2][:und])
    %td
      = t(forms[:pl2][:cyr], forms[:pl2][:lat], :linebreak => true)
      - if forms[:pl2][:und]
        %br
        = underlying(forms[:pl2][:und])
