.global-controls
  - if @previous_page
    = link_to icon('arrow-left'), ochets_grammar_page_path(@previous_page[:doc].to_sym), :class => 'back'
  - else
    %span.back.disabled= icon('arrow-left')
  = link_to icon('arrow-up'), ochets_index_path, :class => 'up'
  = link_to icon('home'), root_path, :class => 'home'
  - if @next_page
    = link_to icon('arrow-right'), ochets_grammar_page_path(@next_page[:doc].to_sym), :class => 'forward'
  - else
    %span.forward.disabled= icon('arrow-right')

.nav-title Očets Grammar
%ul.index
  - current = @current_page ? @current_page[:doc].to_sym : nil
  = nav_entry "Foreword", :foreword, current
  = nav_entry "Background", :background, current
  = nav_entry "Phonology", :phonology, current
  = nav_entry "Writing", :writing, current
  = nav_entry "Nominal Morphology", :nominalmorphology, current
  = nav_entry "Quantifier Morphology", :quantifiermorphology, current
  = nav_entry "Adjectival Morphology", :adjectivalmorphology, current
  = nav_entry "Pronoun and Other Pro-Form Morphology", :pronounmorphology, current
  = nav_entry "Verbal Morphology", :verbalmorphology, current
  = nav_entry "Derivational Morphology and Word Creation", :derivationalmorphology, current

.nav-title Očets Lexicon
%ul.resources
  %li= link_to "Lexicon", lexicon_path(:language => :ochets)
