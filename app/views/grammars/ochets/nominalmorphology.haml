        %td= t("чидиле", "čidile", :linebreak => true)
      %tr
        %th 3Sg
        %td= t("һыткуора", "hytkuora", :linebreak => true)
        %td= t("һиннии", "hinnii", :linebreak => true)
        %td= t("һидиле", "hidile", :linebreak => true)
      %tr
        %th 1Pl
        %td= t("шаҥкуора", "šaŋkuora", :linebreak => true)
        %td= t("шеннии", "šennii", :linebreak => true)
        %td= t("штиле", "štile", :linebreak => true)
      %tr
        %th 2Pl
        %td= t("һуҥкуора", "huŋkuora", :linebreak => true)
