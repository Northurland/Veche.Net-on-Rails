          %th 3Sg <i>eu/ele</i>
          %td= form "lav", "[ˈlaːv]"
          %td= form "deb", "[ˈdɛb]"
          %td= form "vend", "[ˈvɛːn]"
          %td= form "chenosc", "[ˈknosk]"
        %tr
          %th 1Pl <i>nos</i>
          %td= form "levams", "[lə.ˈvaːmz]"
          %td= form "debèms", "[də.ˈbɛːmz]"
          %td= form "vendms", "[ˈvɛː.nɪmz]"
          %td= form "cheneschims", "[knəs.ˈkiːmz]"
        %tr
          %th 2Pl <i>vos</i>
          %td= form "levats", "[lə.ˈvaːts]"
          %td= form "debèts", "[də.ˈbɛts]"
          %td= form "vendts", "[ˈveː.nɪts]"
          %td= form "cheneschits", "[knəs.ˈkits]"
