!!!
%html
  %head
    %title= yield :title
    = stylesheet_link_tag 'application', :media => 'all'
    = javascript_include_tag 'application'
    = csrf_meta_tags
  %body.lexicon
    %header
      #search
        %form#searchform{:method => :get, :action => lexicon_path}
          %input#searchbox{:type => 'text', :placeholder => "Search..."}
          %button{:type => 'submit'}
            = icon('search')
          %a.advanced Advanced
          #advanced-search= yield :advanced
      = yield :nav
    %main
      #search-results= yield :search_results
      #entry-view= yield
